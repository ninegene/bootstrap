# version: 0.0.1

# Based on phusion/baseimage (https://github.com/phusion/baseimage-docker)
# To make your builds reproducible, make sure you lock down to a specific version, not to `latest`!
# See https://github.com/phusion/baseimage-docker/blob/master/Changelog.md for
# a list of version numbers.
FROM phusion/baseimage:0.9.17

# Set correct environment variables.
ENV HOME /root
WORKDIR /root

# Use baseimage-docker's init system.
CMD ["/sbin/my_init"]

# Based on: https://github.com/phusion/baseimage-docker#login_ssh
# Enable ssh server
RUN rm -f /etc/service/sshd/down

# Regenerate SSH host keys. baseimage-docker does not contain any, so you
# have to do that yourself. You may also comment out this instruction; the
# init system will auto-generate one during boot.
RUN /etc/my_init.d/00_regen_ssh_host_keys.sh

## Install your own SSH key generated by prebuild.sh
ADD authorized_keys /root/.ssh/authorized_keys

# Clean up APT when done.
RUN apt-get clean && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*
